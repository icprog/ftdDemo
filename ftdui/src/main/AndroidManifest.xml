            android:screenOrientation="portrait"
            android:theme="@style/FtdUiTheme" />
        <activity
            android:name=".activity.ReportActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FtdUiTheme" />
        <activity
            android:name=".activity.QuestionListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FtdUiTheme" />
        <activity
            android:name=".activity.FileUploadActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FtdUiTheme" />
        <activity
            android:name=".activity.FtdActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FtdUiTheme" />
    </application>

</manifest>