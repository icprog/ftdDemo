<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FtdActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.shuhart.stepview.StepView
        android:id="@+id/step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sv_steps="@array/steps"
        android:layout_gravity="top"
        app:sv_selectedCircleColor="@color/colorAccent"
        app:sv_selectedTextColor="@color/colorAccent"
        app:sv_stepLineWidth="1px"
        app:sv_nextTextColor="#000"
        app:sv_nextStepLineColor="#000"
        app:sv_doneCircleColor="#cecece"
        app:sv_doneStepLineColor="#cecece"
        app:sv_doneTextColor="#000"
        app:sv_selectedStepNumberColor="@color/colorPrimary"
        app:sv_doneStepMarkColor="@color/colorPrimary"
        app:sv_stepNumberTextSize="12sp"
        app:sv_animationType="All"
        android:padding="10dp"/>

</FrameLayout>