<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cecece"
    android:orientation="vertical"
    tools:context=".activity.FileUploadActivity">

    <include
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <RelativeLayout
            android:id="@+id/ll_face"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/ll_tongue_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_face"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_face"
                android:background="@color/colorFloat"
                android:gravity="center"
                android:text="面部"
                android:padding="2dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_result_face"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_face"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                tools:text="分析失败，脸太白了" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_tongue_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/ll_face"
            app:layout_constraintEnd_toStartOf="@+id/ll_tongue_bottom"
            app:layout_constraintStart_toEndOf="@+id/ll_face"
            app:layout_constraintTop_toTopOf="@+id/ll_face">

            <ImageView
                android:id="@+id/iv_tongue_top"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_tongue_top"
                android:background="@color/colorFloat"
                android:gravity="center"
                android:text="舌诊"
                android:padding="2dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_result_tongue_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tongue_top"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                tools:text="分析失败，脸太白了" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_tongue_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/ll_tongue_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ll_tongue_top"
            app:layout_constraintTop_toTopOf="@+id/ll_tongue_top">

            <ImageView
                android:id="@+id/iv_tongue_bottom"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_tongue_bottom"
                android:background="@color/colorFloat"
                android:gravity="center"
                android:text="舌面"
                android:padding="2dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_result_tongue_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tongue_bottom"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                tools:text="分析失败，脸太白了" />
        </RelativeLayout>

        <include
            layout="@layout/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@id/submit"
            app:layout_constraintStart_toStartOf="@id/submit"
            app:layout_constraintTop_toBottomOf="@id/ll_face" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/selector_btn_submit"
            android:enabled="false"
            android:text="上传中..."
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/pb" />

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cl"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/iv_refresh"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="若要不失眠，株洲加百联" />

        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:src="@drawable/reload1" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:padding="20dp"
                android:textSize="16sp"
                tools:text="这里的白莲子是指莲子，桂皮、肾、心经，有养心安神的作用，对虚烦惊悸、失眠不美等症状有起小。" />

        </android.support.v4.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/pb_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>


</LinearLayout>